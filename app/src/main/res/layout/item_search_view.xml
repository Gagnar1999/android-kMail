<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewMail"
    android:layout_width="match_parent"
    android:layout_height="@dimen/searchViewHeight"
    app:cardBackgroundColor="@color/searchBarBackgroundColor"
    app:cardCornerRadius="20dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchInputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/alternativeMargin"
        android:padding="0dp"
        app:boxStrokeColor="@null"
        app:boxStrokeWidth="0dp"
        app:endIconDrawable="@drawable/ic_close_search"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:placeholderText="@string/searchFieldPlaceholder"
        app:placeholderTextColor="@color/tertiaryTextColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchTextInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/marginStandardSmall"
            android:hint="@string/searchFieldPlaceholder"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:inputType="textFilter"
            android:lines="1"
            android:padding="0dp"
            android:textColorHint="@color/tertiaryTextColor" />

    </com.google.android.material.textfield.TextInputLayout>
</com.google.android.material.card.MaterialCardView>
