<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.newmessage.FieldFragment">

    <TextView
        android:id="@+id/prefix"
        style="@style/Callout.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStandardMedium"
        android:layout_marginEnd="@dimen/marginStandardVerySmall"
        android:text="@string/toTitle"
        android:transitionName="prefixTextView"
        app:layout_constraintBottom_toBottomOf="@id/ccAutocompleteInput"
        app:layout_constraintEnd_toStartOf="@id/ccAutocompleteInput"
        app:layout_constraintTop_toTopOf="@id/ccAutocompleteInput"
        app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.chip.ChipGroup
            android:transitionName="chipGroup"
            android:paddingHorizontal="@dimen/marginStandardMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ccItemsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:chipSpacingVertical="0dp" />

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginHorizontal="@dimen/marginStandardVerySmall"-->
        <!--            android:text="dededmiewmdioewmoidmewoidoie\nkdoewopkdowpkdeopwkdoepwkk\njdieowjiodewnduewonn\njsiudewjdehwui" />-->


        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:transitionName="fieldTransition"
            app:layout_constraintTop_toBottomOf="@id/ccItemsChipGroup"
            app:layout_constraintStart_toEndOf="@id/prefix"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ccAutocompleteInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginStandardVerySmall"
            android:backgroundTint="@android:color/transparent"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/autoCompleteRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ccAutocompleteInput"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/item_contact" />
</androidx.constraintlayout.widget.ConstraintLayout>
