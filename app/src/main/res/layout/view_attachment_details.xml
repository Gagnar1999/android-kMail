<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/standardIconSize"
        android:layout_height="@dimen/standardIconSize"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/marginStandardVerySmall"
        android:importantForAccessibility="no"
        tools:layout_marginHorizontal="@dimen/marginStandardSmall"
        tools:src="@drawable/ic_file_pdf" />

    <LinearLayout
        android:id="@+id/textsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/marginStandardVerySmall"
        android:layout_marginEnd="@dimen/marginStandardVerySmall"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_goneMarginEnd="@dimen/marginStandardSmall">

        <TextView
            android:id="@+id/fileName"
            style="@style/BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:lines="1"
            tools:text="billet-055.pdf" />

        <TextView
            android:id="@+id/fileSize"
            style="@style/Label.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="36 ko" />
    </LinearLayout>
</merge>
