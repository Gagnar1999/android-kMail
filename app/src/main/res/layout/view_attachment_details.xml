<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/standardIconSize"
        android:layout_height="@dimen/standardIconSize"
        android:layout_marginHorizontal="@dimen/marginStandardSmall"
        android:layout_marginVertical="@dimen/marginStandardVerySmall"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textsLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_file_pdf" />

    <LinearLayout
        android:id="@+id/textsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/marginStandardVerySmall"
        android:layout_marginVertical="@dimen/marginStandardVerySmall"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_goneMarginEnd="@dimen/marginStandardSmall">

        <TextView
            android:id="@+id/fileName"
            style="@style/BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:lines="1"
            android:maxWidth="220dp"
            tools:text="billet-055.pdf" />

        <TextView
            android:id="@+id/fileSize"
            style="@style/Label.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="36 ko" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
