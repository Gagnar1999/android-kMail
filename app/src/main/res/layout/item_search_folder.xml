<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/folderButton"
        style="@style/TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/backgroundColorTertiary"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/alternativeMargin"
        android:textColor="@color/primaryTextColor"
        app:cornerRadius="0dp"
        app:iconPadding="@dimen/alternativeMargin"
        app:iconSize="18dp"
        app:iconTint="?attr/colorPrimary"
        tools:icon="@drawable/ic_archive_folder"
        tools:text="Boîte de réception" />

</LinearLayout>

