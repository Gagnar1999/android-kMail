<com.infomaniak.mail.ui.main.menu.SimpleSettingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title="@string/enterPasswordTitle"
    tools:context=".ui.main.user.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/marginStandardMedium"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enterPasswordDescription"
            style="@style/Body.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandardMedium"
            app:layout_constraintBottom_toTopOf="@id/mail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatar"
            tools:text="@string/enterPasswordDescription" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/marginStandard"
            android:layout_weight="1"
            android:hint="@string/enterPasswordTitle"
            app:endIconContentDescription="@string/contentDescriptionButtonShowPassword"
            app:endIconDrawable="@drawable/ic_show_password"
            app:endIconMode="password_toggle"
            app:errorEnabled="true"
            app:errorIconDrawable="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmButton"
            style="@style/TextButtonPrimary"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/marginStandardSmall"
            android:text="@string/buttonConfirm" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forgotPasswordButton"
            style="@style/TextButtonSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/marginStandardSmall"
            android:text="@string/buttonPasswordForgotten" />
    </LinearLayout>
</com.infomaniak.mail.ui.main.menu.SimpleSettingView>

