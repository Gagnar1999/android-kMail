<com.infomaniak.mail.ui.main.menu.SimpleSettingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title="@string/enterPasswordTitle"
    tools:context=".ui.main.InvalidPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/enterPasswordDescription"
            style="@style/SettingHeader"
            android:layout_marginTop="@dimen/marginStandardMedium"
            android:paddingBottom="0dp"
            app:layout_constraintBottom_toTopOf="@id/detachMailbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/enterPasswordDescription" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detachMailbox"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStandardSmall"
            android:minHeight="@dimen/marginStandard"
            android:paddingHorizontal="@dimen/marginStandardSmall"
            android:paddingVertical="@dimen/marginStandardVerySmall"
            android:text="@string/buttonDetachMailbox"
            app:layout_constraintBottom_toTopOf="@id/passwordInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enterPasswordDescription" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginStandardMedium"
            android:layout_marginTop="@dimen/marginStandardMedium"
            android:hint="@string/enterPasswordTitle"
            app:endIconContentDescription="@string/contentDescriptionButtonShowPassword"
            app:endIconDrawable="@drawable/ic_show_password"
            app:endIconMode="password_toggle"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detachMailbox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmButton"
            style="@style/TextButtonPrimary"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/marginStandard"
            android:layout_marginBottom="@dimen/marginStandardSmall"
            android:text="@string/buttonConfirm"
            app:layout_constraintBottom_toTopOf="@id/forgotPasswordButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forgotPasswordButton"
            style="@style/TextButtonSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginStandardSmall"
            android:text="@string/buttonPasswordForgotten"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.infomaniak.mail.ui.main.menu.SimpleSettingView>
