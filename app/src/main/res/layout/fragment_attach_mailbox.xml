<com.infomaniak.mail.ui.main.menu.SimpleSettingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title="@string/buttonAddEmailAddress"
    tools:context=".ui.main.user.AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/attachMailboxDescription"
            style="@style/SettingHeader"
            android:text="@string/attachAddressDescription"
            app:layout_constraintBottom_toTopOf="@id/mailInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mailInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginStandardMedium"
            android:layout_marginTop="@dimen/marginStandard"
            android:hint="@string/attachAddressInputHint"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            app:helperText="@string/errorAttachAddressInput"
            app:layout_constraintBottom_toTopOf="@id/passwordInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attachMailboxDescription">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/marginStandardMedium"
            android:layout_marginTop="@dimen/marginStandardSmall"
            android:hint="@string/attachAddressPasswordInputHint"
            app:endIconContentDescription="@string/contentDescriptionButtonShowPassword"
            app:endIconDrawable="@drawable/ic_show_password"
            app:endIconMode="password_toggle"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mailInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attachMailboxButton"
            style="@style/TextButtonPrimary"
            android:layout_width="0dp"
            android:layout_marginHorizontal="@dimen/marginStandard"
            android:layout_marginBottom="@dimen/marginStandardSmall"
            android:text="@string/buttonAttachEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.infomaniak.mail.ui.main.menu.SimpleSettingView>
