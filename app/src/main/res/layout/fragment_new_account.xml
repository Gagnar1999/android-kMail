<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/marginStandard">

        <ImageView
            android:id="@+id/illustration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandard"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:src="@drawable/new_account_illustration_pink" />

        <TextView
            android:id="@+id/title"
            style="@style/H1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginLarge"
            android:text="@string/newAccountTitle"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/chipStorageMailLayoutHeightMeasure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/illustration"
            app:layout_constraintWidth_max="400dp" />

        <View
            android:id="@+id/chipWidthHelper"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/chipStorageMailLayoutHeightMeasure"
            app:layout_constraintWidth_max="400dp" />

        <FrameLayout
            android:id="@+id/chipStorageMailLayoutHeightMeasure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStandardSmall"
            android:layout_marginTop="@dimen/marginStandardSmall"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/description"
            app:layout_constraintEnd_toStartOf="@id/chipStorageDriveLayoutHeightMeasure"
            app:layout_constraintStart_toStartOf="@id/chipWidthHelper"
            app:layout_constraintTop_toBottomOf="@id/title">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipStorageMailHeightMeasure"
                style="@style/LabelMedium.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="?attr/colorPrimaryContainer"
                android:clickable="false"
                android:focusable="false"
                android:maxLines="2"
                android:minHeight="0dp"
                android:paddingHorizontal="@dimen/marginStandardSmall"
                android:text="@string/newAccountStorageMail" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/chipStorageDriveLayoutHeightMeasure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandardSmall"
            android:layout_marginEnd="@dimen/marginStandardSmall"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/chipWidthHelper"
            app:layout_constraintStart_toEndOf="@id/chipStorageMailLayoutHeightMeasure"
            app:layout_constraintTop_toBottomOf="@id/title">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipStorageDriveHeightMeasure"
                style="@style/LabelMedium.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="?attr/colorPrimaryContainer"
                android:clickable="false"
                android:focusable="false"
                android:maxLines="2"
                android:minHeight="0dp"
                android:paddingHorizontal="@dimen/marginStandardSmall"
                android:text="@string/newAccountStorageDrive" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/mailStorageLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/marginStandardSmall"
            app:layout_constraintBottom_toBottomOf="@id/chipBottomBarrier"
            app:layout_constraintEnd_toStartOf="@id/driveStorageLayout"
            app:layout_constraintStart_toStartOf="@id/chipWidthHelper"
            app:layout_constraintTop_toTopOf="@id/chipWidthHelper">

            <!--If you want to update this string or button's style also change the same properties on chipStorageMailHeightMeasure-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mailStorageChip"
                style="@style/LabelMedium.Accent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="?attr/colorPrimaryContainer"
                android:clickable="false"
                android:focusable="false"
                android:paddingHorizontal="@dimen/marginStandardSmall"
                android:text="@string/newAccountStorageMail" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/driveStorageLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/marginStandardSmall"
            app:layout_constraintBottom_toBottomOf="@id/chipBottomBarrier"
            app:layout_constraintEnd_toEndOf="@id/chipWidthHelper"
            app:layout_constraintStart_toEndOf="@id/mailStorageLayout"
            app:layout_constraintTop_toTopOf="@id/chipWidthHelper">

            <!--If you want to update this string or button's style also change the same properties on chipStorageDriveHeightMeasure-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/driveStorageChip"
                style="@style/LabelMedium.Accent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="?attr/colorPrimaryContainer"
                android:clickable="false"
                android:focusable="false"
                android:paddingHorizontal="@dimen/marginStandardSmall"
                android:text="@string/newAccountStorageDrive" />

        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/chipBottomBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="chipStorageMailLayoutHeightMeasure,chipStorageDriveLayoutHeightMeasure" />

        <TextView
            android:id="@+id/description"
            style="@style/BodySmall.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandard"
            android:layout_marginBottom="@dimen/marginStandard"
            android:text="@string/newAccountDescription"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/createNewAddressButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chipStorageMailLayoutHeightMeasure"
            app:layout_constraintWidth_max="400dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buttonGuideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <View
            android:id="@+id/dummyButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/textButtonPrimaryHeight"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/createNewAddressButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/buttonGuideline" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createNewAddressButton"
            style="@style/TextButtonPrimary"
            android:layout_width="0dp"
            android:text="@string/buttonCreate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dummyButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
